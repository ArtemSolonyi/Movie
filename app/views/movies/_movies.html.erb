<% if @movies.any? %>
  <div id="movies">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-auto">
          <%= render movie %>
          <%= link_to movie.title, movie, class: 'link_to' %><br>
          <div id="stars" class="form-stars-multi" data-controller="ratings" data-ratings-my-value="<%= movie_path movie %>/rating" data-action="input->ratings#greet">
            <div class="ratings_multi <% movie.title %>">
              <% 10.downto(1) do |i| %>
                <input type="radio" name="ratings_multi" value="<%= i %>" id="<%= i %> <%=movie.title%>">
                <label for="<%= i %> <%=movie.title%>">â˜†</label>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <h3>The current category does not include films</h3>
<% end %>

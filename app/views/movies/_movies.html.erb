<% if @movies.any? %>
  <div id="movies">
    <div class="row">
      <% @movies.each do |movie| %>
        <div class="col-auto">
          <%= render movie %>
          <%= link_to movie.title, movie, class: 'link_to' %><br>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <h3>The current category does not include films</h3>
<% end %>